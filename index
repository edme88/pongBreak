<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>

    <style>
        * { padding: 0; margin: 0; }
        canvas { background: #eee; display: block; margin: 0 auto; }
    </style>
</head>
<body>

<canvas id="myCanvas" width="480" height="320"></canvas>

<script>
    var canvas = document.getElementById("myCanvas");
    var ctx = canvas.getContext("2d");

    var x = canvas.width/2;
    var y = canvas.height-30;
    var dx = -2;
    var dy = 0;

    //Radio de la bola
    var ballRadius = 10;

    function drawBall() {
        ctx.beginPath();
        ctx.arc(x, y, ballRadius, 0, Math.PI*2);
        ctx.fillStyle = "#0095DD";
        ctx.fill();
        ctx.closePath();
    }

    function draw() {
        //Limpiar Lienzo
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        //Choco arriba? Cambio de direcci贸n
        if(y + dy < 0) {
            dy = -dy;
        }

        //Choco abajo? Cambio de direcci贸n
        if(y + dy > canvas.height) {
            dy = -dy;
        }

        //Choco izquierda? Cambio de direcci贸n
        if(x + dx < 0) {
            dx = -dx;
        }

        //Choco derecha? Cambio de direcci贸n
        if(x + dx > canvas.width) {
            dx = -dx;
        }

        //Dibujar Bola
        drawBall();
        x += dx;
        y += dy;
    }
    setInterval(draw, 5);
</script>

</body>
</html>
